{
  "name": "js-libp3p",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@git.geilcode.com:raphaelsoul/js-libp3p.git",
  "author": "raphaelsoul <raphaelsoul@163.com>",
  "license": "MIT",
  "scripts": {
    "lint:force": "node_modules/tslint/bin/tslint -c tslint.json --force --fix -p .",
    "lint": "node_modules/tslint/bin/tslint -c tslint.json --fix -p .",
    "build": "yarn test && node_modules/typescript/bin/tsc",
    "pretest": "yarn lint:force",
    "test": "export NODE_ENV=test && nyc mocha --recursive \"tests/**/*.spec.ts\" --exit -b"
  },
  "devDependencies": {
    "chai": "4.2.0",
    "mocha": "5.2.0",
    "nyc": "13.1.0",
    "ts-node": "7.0.1",
    "tslint": "5.11.0",
    "typescript": "3.1.3"
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "src/**/*.d.ts",
      "src/**/*.tsx"
    ],
    "exclude": [
      "tests/**/*"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true,
    "report-dir": "./coverage"
  }
}
